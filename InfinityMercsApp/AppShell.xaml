<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="InfinityMercsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:InfinityMercsApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="InfinityMercsApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Viewer"
        ContentTemplate="{DataTemplate views:ViewerPage}"
        Route="ViewerPage" />
        
    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Route="SettingsPage" />

    <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate views:AboutPage}"
        Route="AboutPage" />


</Shell>
