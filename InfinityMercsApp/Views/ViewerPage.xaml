<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="InfinityMercsApp.Views.ViewerPage"
             Title="Viewer">

    <Grid Padding="16" ColumnSpacing="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" StrokeThickness="1" Padding="10">
            <Grid RowDefinitions="Auto,Auto,*" RowSpacing="8">
                <Label
                    Text="Factions"
                    FontSize="20"
                    FontAttributes="Bold" />

                <ActivityIndicator
                    Grid.Row="1"
                    IsRunning="{Binding IsLoading}"
                    IsVisible="{Binding IsLoading}"
                    HorizontalOptions="Start" />

                <CollectionView
                    Grid.Row="2"
                    ItemsSource="{Binding Factions}"
                    SelectedItem="{Binding SelectedFaction, Mode=TwoWay}"
                    SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="6" ColumnDefinitions="Auto,*" ColumnSpacing="8">
                                <Label
                                    Text="{Binding Id}"
                                    FontAttributes="Bold" />
                                <Label
                                    Grid.Column="1"
                                    Text="{Binding Name}" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Border>

        <Border Grid.Column="1" StrokeThickness="1" Padding="12">
            <Grid RowDefinitions="Auto,Auto,Auto,*" RowSpacing="8">
                <Label Text="Faction Logo (SVG)" FontSize="20" FontAttributes="Bold" />
                <Label Grid.Row="1" Text="{Binding SelectedFaction.Name}" />
                <Label Grid.Row="2" x:Name="SvgStatusLabel" TextColor="#6B7280" />
                <Border Grid.Row="3" StrokeThickness="1" Padding="8">
                    <skia:SKCanvasView x:Name="SvgCanvas" PaintSurface="OnSvgCanvasPaintSurface" />
                </Border>
            </Grid>
        </Border>

        <Border Grid.Column="2" StrokeThickness="1" Padding="12">
            <Label Text="Column 3" FontSize="20" FontAttributes="Bold" />
        </Border>
    </Grid>

</ContentPage>
