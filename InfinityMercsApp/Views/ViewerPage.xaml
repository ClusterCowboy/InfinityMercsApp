<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:InfinityMercsApp.Views.Controls"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="InfinityMercsApp.Views.ViewerPage"
             Title="Viewer">

    <Grid Padding="16" ColumnSpacing="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" StrokeThickness="1" Padding="10">
            <Grid RowDefinitions="Auto,Auto,Auto,*" RowSpacing="8">
                <Label
                    Text="Factions"
                    FontSize="20"
                    FontAttributes="Bold" />

                <HorizontalStackLayout Grid.Row="1" Spacing="8" VerticalOptions="Center">
                    <RadioButton Content="All" IsChecked="{Binding ShowAllFactionEntries}" />
                    <RadioButton Content="Factions" IsChecked="{Binding ShowFactionEntriesOnly}" />
                    <RadioButton Content="Sectorials" IsChecked="{Binding ShowSectorialEntriesOnly}" />
                </HorizontalStackLayout>

                <ActivityIndicator
                    Grid.Row="2"
                    IsRunning="{Binding IsLoading}"
                    IsVisible="{Binding IsLoading}"
                    HorizontalOptions="Start" />

                <ScrollView Grid.Row="3" x:Name="FactionScrollView">
                    <ScrollView.GestureRecognizers>
                        <PanGestureRecognizer PanUpdated="OnFactionListPanUpdated" />
                    </ScrollView.GestureRecognizers>
                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding Factions}" Spacing="0">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <controls:FactionListItemView>
                                    <controls:FactionListItemView.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SelectFactionCommand}"
                                            CommandParameter="{Binding .}" />
                                    </controls:FactionListItemView.GestureRecognizers>
                                </controls:FactionListItemView>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Border>

        <Border Grid.Column="1" StrokeThickness="1" Padding="12">
            <Grid RowDefinitions="Auto,*" RowSpacing="8">
                <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                    <Button Grid.Column="0" Text="Units" Command="{Binding ShowUnitsTabCommand}" CornerRadius="8">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding ShowUnitsTab}" Value="True">
                                <Setter Property="BackgroundColor" Value="#2563EB" />
                                <Setter Property="TextColor" Value="White" />
                            </DataTrigger>
                            <DataTrigger TargetType="Button" Binding="{Binding ShowUnitsTab}" Value="False">
                                <Setter Property="BackgroundColor" Value="#E5E7EB" />
                                <Setter Property="TextColor" Value="#111827" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button Grid.Column="1" Text="Fireteams" Command="{Binding ShowFireteamsTabCommand}" CornerRadius="8">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding ShowFireteamsTab}" Value="True">
                                <Setter Property="BackgroundColor" Value="#2563EB" />
                                <Setter Property="TextColor" Value="White" />
                            </DataTrigger>
                            <DataTrigger TargetType="Button" Binding="{Binding ShowFireteamsTab}" Value="False">
                                <Setter Property="BackgroundColor" Value="#E5E7EB" />
                                <Setter Property="TextColor" Value="#111827" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </Grid>

                <Grid Grid.Row="1" RowDefinitions="Auto,Auto,Auto,*" RowSpacing="8" IsVisible="{Binding ShowUnitsTab}">
                    <Label Text="Units" FontSize="20" FontAttributes="Bold" />
                    <VerticalStackLayout Grid.Row="1" Spacing="6">
                        <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                            <CheckBox IsChecked="{Binding MercsOnlyUnits}" VerticalOptions="Center" />
                            <Label Text="Mercs Only Units" VerticalOptions="Center" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                            <CheckBox IsChecked="{Binding LieutenantOnlyUnits}" VerticalOptions="Center" />
                            <Label Text="Lieutenant Only Units" VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    <Label Grid.Row="2" Text="{Binding UnitsStatus}" TextColor="#6B7280" />
                    <ScrollView Grid.Row="3" x:Name="UnitScrollView">
                        <ScrollView.GestureRecognizers>
                            <PanGestureRecognizer PanUpdated="OnUnitListPanUpdated" />
                        </ScrollView.GestureRecognizers>
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Units}" Spacing="0">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <controls:FactionListItemView>
                                        <controls:FactionListItemView.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SelectUnitCommand}"
                                                CommandParameter="{Binding .}" />
                                        </controls:FactionListItemView.GestureRecognizers>
                                    </controls:FactionListItemView>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>

                <Grid Grid.Row="1" RowDefinitions="Auto,Auto,Auto,*" RowSpacing="8" IsVisible="{Binding ShowFireteamsTab}">
                    <Label Text="Fireteams" FontSize="20" FontAttributes="Bold" />
                    <Grid Grid.Row="1" ColumnDefinitions="*,*,*" ColumnSpacing="8">
                        <VerticalStackLayout Spacing="2">
                            <Label Text="DUO" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                            <Label Text="{Binding FireteamDuoCount}" FontSize="18" HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="HARIS" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                            <Label Text="{Binding FireteamHarisCount}" FontSize="18" HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2" Spacing="2">
                            <Label Text="CORE" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                            <Label Text="{Binding FireteamCoreCount}" FontSize="18" HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </Grid>
                    <Label Grid.Row="2" Text="{Binding FireteamsStatus}" TextColor="#6B7280" />
                    <ScrollView Grid.Row="3">
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Fireteams}" Spacing="8">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Border StrokeThickness="1" Padding="10">
                                        <VerticalStackLayout Spacing="6">
                                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                                            <Label Text="{Binding TeamTypes, StringFormat='Types: {0}'}" />
                                            <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
                                                <Label Grid.Column="0" Text="Unit" FontAttributes="Bold" />
                                                <Label Grid.Column="1" Text="Min" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                                                <Label Grid.Column="2" Text="Max" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                                            </Grid>
                                            <VerticalStackLayout BindableLayout.ItemsSource="{Binding UnitLimits}" Spacing="2">
                                                <BindableLayout.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
                                                            <Label Grid.Column="0" Text="{Binding Name}" />
                                                            <Label Grid.Column="1" Text="{Binding Min}" HorizontalTextAlignment="Center" />
                                                            <Label Grid.Column="2" Text="{Binding Max}" HorizontalTextAlignment="Center" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </BindableLayout.ItemTemplate>
                                            </VerticalStackLayout>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Column="2" StrokeThickness="1" Padding="12">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,*" RowSpacing="8">
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" ColumnSpacing="8" RowSpacing="4">
                    <Label Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Text="{Binding UnitNameHeading}" FontSize="24" FontAttributes="Bold" VerticalOptions="Center" />
                    <skia:SKCanvasView
                        Grid.Row="0"
                        Grid.Column="1"
                        x:Name="TopIconRowCanvas"
                        HeightRequest="24"
                        HorizontalOptions="Fill"
                        VerticalOptions="Center"
                        IsVisible="{Binding HasAnyTopHeaderIcons}"
                        PaintSurface="OnTopIconRowCanvasPaintSurface" />
                    <skia:SKCanvasView
                        Grid.Row="1"
                        Grid.Column="1"
                        x:Name="BottomIconRowCanvas"
                        HeightRequest="24"
                        HorizontalOptions="Fill"
                        VerticalOptions="Center"
                        IsVisible="{Binding HasAnyBottomHeaderIcons}"
                        PaintSurface="OnBottomIconRowCanvasPaintSurface" />
                </Grid>

                <Grid Grid.Row="1" ColumnSpacing="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Text="MOV" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="1" Text="CC" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="2" Text="BS" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="3" Text="PH" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="4" Text="WIP" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="5" Text="ARM" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="6" Text="BTS" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="7" Text="{Binding UnitVitalityHeader}" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="8" Text="S" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="9" Text="AVA" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                </Grid>

                <Grid Grid.Row="2" ColumnSpacing="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Text="{Binding UnitMov}" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="1" Text="{Binding UnitCc}" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="2" Text="{Binding UnitBs}" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="3" Text="{Binding UnitPh}" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="4" Text="{Binding UnitWip}" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="5" Text="{Binding UnitArm}" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="6" Text="{Binding UnitBts}" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="7" Text="{Binding UnitVitality}" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="8" Text="{Binding UnitS}" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="9" Text="{Binding UnitAva}" HorizontalTextAlignment="Center" />
                </Grid>

                <Label Grid.Row="3" FormattedText="{Binding EquipmentSummaryFormatted}" LineBreakMode="WordWrap" />
                <Label Grid.Row="4" FormattedText="{Binding SpecialSkillsSummaryFormatted}" LineBreakMode="WordWrap" />
                <Label Grid.Row="5" Text="Configurations" FontSize="20" FontAttributes="Bold" />
                <Label Grid.Row="6" Text="{Binding ProfilesStatus}" TextColor="#6B7280" />
                <ScrollView Grid.Row="7">
                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding Profiles}" Spacing="6">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Border StrokeThickness="1" Padding="10" MinimumHeightRequest="50">
                                    <VerticalStackLayout Spacing="2">
                                        <Grid ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="72" />
                                                <ColumnDefinition Width="56" />
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" FormattedText="{Binding NameFormatted}" FontAttributes="Bold" />
                                            <Label Grid.Column="1" Text="{Binding SwcDisplay}" FontSize="12" HorizontalTextAlignment="End" />
                                            <Label Grid.Column="2" Text="{Binding Cost, StringFormat='C {0}'}" FontSize="12" HorizontalTextAlignment="End" />
                                        </Grid>
                                        <Grid ColumnSpacing="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" FormattedText="{Binding RangedWeaponsFormatted}" FontSize="12" TextColor="#EF4444" LineBreakMode="WordWrap" />
                                            <Label Grid.Column="1" FormattedText="{Binding MeleeWeaponsFormatted}" FontSize="12" TextColor="#22C55E" LineBreakMode="WordWrap" />
                                            <Label Grid.Column="2" FormattedText="{Binding UniqueEquipmentFormatted}" FontSize="12" TextColor="#06B6D4" LineBreakMode="WordWrap" />
                                            <Label Grid.Column="3" FormattedText="{Binding UniqueSkillsFormatted}" FontSize="12" TextColor="#F59E0B" LineBreakMode="WordWrap" />
                                        </Grid>
                                        <Label FormattedText="{Binding PeripheralsFormatted}" FontSize="12" TextColor="#FACC15" LineBreakMode="WordWrap" IsVisible="{Binding HasPeripherals}" />
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Border>
    </Grid>

</ContentPage>
