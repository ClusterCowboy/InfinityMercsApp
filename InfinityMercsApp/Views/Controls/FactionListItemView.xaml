<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="InfinityMercsApp.Views.Controls.FactionListItemView">

    <Border x:Name="ItemBorder" Padding="0" StrokeThickness="0">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="6" />
        </Border.StrokeShape>
        <Border.Triggers>
            <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="True">
                <Setter Property="BackgroundColor" Value="#334155" />
            </DataTrigger>
            <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="False">
                <Setter Property="BackgroundColor" Value="Transparent" />
            </DataTrigger>
        </Border.Triggers>

        <Grid
            Padding="8,6"
            MinimumHeightRequest="50"
            ColumnDefinitions="Auto,*"
            ColumnSpacing="10">
            <skia:SKCanvasView
                x:Name="LogoCanvas"
                WidthRequest="32"
                HeightRequest="32"
                VerticalOptions="Center"
                PaintSurface="OnLogoCanvasPaintSurface" />
            <VerticalStackLayout Grid.Column="1" Spacing="1" VerticalOptions="Center">
                <Label Text="{Binding Name}" />
                <Label
                    Text="{Binding Subtitle}"
                    FontSize="12"
                    TextColor="#6B7280"
                    IsVisible="{Binding HasSubtitle}" />
            </VerticalStackLayout>
        </Grid>
    </Border>

</ContentView>
