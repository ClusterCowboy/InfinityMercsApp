<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="InfinityMercsApp.Views.AboutPage"
             Title="About">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Label
                Text="InfinityMercsApp"
                FontSize="28"
                FontAttributes="Bold" />

            <Label
                Text="About this app"
                FontSize="18"
                FontAttributes="Bold" />

            <Label
                Text="This page can be used for app information, version notes, and credits."
                LineBreakMode="WordWrap" />

            <Label
                Text="Authors"
                FontSize="18"
                FontAttributes="Bold"
                Margin="0,12,0,0" />

            <Label
                Text="Jeremiah Patrick"
                FontAttributes="Bold" />

            <Label
                Text="Email:" />

            <Label
                Text="jeremiahpatrick@protonmail.com"
                TextColor="#2563EB"
                TextDecorations="Underline">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnEmailTapped" />
                </Label.GestureRecognizers>
            </Label>

            <Label
                Text="Discord:" />

            <Label
                Text="edwardfredward_09529"
                TextColor="#2563EB"
                TextDecorations="Underline">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDiscordTapped" />
                </Label.GestureRecognizers>
            </Label>

            <Label
                Text="Attribution"
                FontSize="18"
                FontAttributes="Bold"
                Margin="0,12,0,0" />

            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                <skia:SKCanvasView
                    x:Name="AttributionIconCanvas"
                    WidthRequest="50"
                    HeightRequest="50"
                    VerticalOptions="Start"
                    PaintSurface="OnAttributionIconCanvasPaintSurface" />

                <FlexLayout
                    Grid.Column="1"
                    Direction="Row"
                    Wrap="Wrap"
                    AlignItems="Start">
                    <Label Text="cubes-svgrepo-com.svg Used under CC Attribution License, " />
                    <Label
                        Text="DazzleUI Gumroad"
                        TextColor="#2563EB"
                        TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAttributionTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </FlexLayout>
            </Grid>

            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                <skia:SKCanvasView
                    x:Name="AttributionIcon4Canvas"
                    WidthRequest="50"
                    HeightRequest="50"
                    VerticalOptions="Start"
                    PaintSurface="OnAttributionIcon4CanvasPaintSurface" />

                <FlexLayout
                    Grid.Column="1"
                    Direction="Row"
                    Wrap="Wrap"
                    AlignItems="Start">
                    <Label Text="noun-arrow-963008.svg Arrow by James Smith from " />
                    <Label
                        Text="Noun Project"
                        TextColor="#2563EB"
                        TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnNounProjectAttributionTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text=" (CC BY 3.0)" />
                </FlexLayout>
            </Grid>

            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                <skia:SKCanvasView
                    x:Name="AttributionIcon5Canvas"
                    WidthRequest="50"
                    HeightRequest="50"
                    VerticalOptions="Start"
                    PaintSurface="OnAttributionIcon5CanvasPaintSurface" />

                <FlexLayout
                    Grid.Column="1"
                    Direction="Row"
                    Wrap="Wrap"
                    AlignItems="Start">
                    <Label Text="noun-circle-arrow-803872.svg circle arrow by Eric Miller from " />
                    <Label
                        Text="Noun Project"
                        TextColor="#2563EB"
                        TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnNounCircleArrowAttributionTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text=" (CC BY 3.0)" />
                </FlexLayout>
            </Grid>

            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                <skia:SKCanvasView
                    x:Name="AttributionIcon6Canvas"
                    WidthRequest="50"
                    HeightRequest="50"
                    VerticalOptions="Start"
                    PaintSurface="OnAttributionIcon6CanvasPaintSurface" />

                <FlexLayout
                    Grid.Column="1"
                    Direction="Row"
                    Wrap="Wrap"
                    AlignItems="Start">
                    <Label Text="noun-fire-131591.svg Fire by Bohdan Burmich from " />
                    <Label
                        Text="Noun Project"
                        TextColor="#2563EB"
                        TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnNounFireAttributionTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text=" (CC BY 3.0)" />
                </FlexLayout>
            </Grid>

            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                <skia:SKCanvasView
                    x:Name="AttributionIcon2Canvas"
                    WidthRequest="50"
                    HeightRequest="50"
                    VerticalOptions="Start"
                    PaintSurface="OnAttributionIcon2CanvasPaintSurface" />

                <FlexLayout
                    Grid.Column="1"
                    Direction="Row"
                    Wrap="Wrap"
                    AlignItems="Start">
                    <Label Text="cube-alt-2-svgrepo-com.svg Used under CC0 License, got from " />
                    <Label
                        Text="SVG Repo"
                        TextColor="#2563EB"
                        TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSvgRepoAttributionTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </FlexLayout>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
