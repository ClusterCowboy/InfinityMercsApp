<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:InfinityMercsApp.ViewModels"
             x:Class="InfinityMercsApp.Views.MainPage"
             x:DataType="viewModels:MainViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                Text="{Binding Greeting}"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="{Binding Subtitle}"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Button
                Text="{Binding CounterText}"
                SemanticProperties.Hint="Counts the number of times you click"
                Command="{Binding IncrementCounterCommand}"
                HorizontalOptions="Fill" />

            <Button
                Text="Download Metadata JSON"
                Command="{Binding DownloadMetadataCommand}"
                HorizontalOptions="Fill" />

            <Label
                Text="{Binding MetadataStatus}"
                LineBreakMode="WordWrap" />

            <Entry
                Text="{Binding FactionIdInput}"
                Placeholder="Faction ID"
                Keyboard="Numeric" />

            <Button
                Text="Download Army Data JSON"
                Command="{Binding DownloadArmyDataCommand}"
                HorizontalOptions="Fill" />

            <Label
                Text="{Binding ArmyStatus}"
                LineBreakMode="WordWrap" />

            <Button
                Text="Update All Factions From Metadata"
                Command="{Binding UpdateAllDataCommand}"
                HorizontalOptions="Fill" />

            <Label
                Text="{Binding UpdateStatus}"
                LineBreakMode="WordWrap" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
